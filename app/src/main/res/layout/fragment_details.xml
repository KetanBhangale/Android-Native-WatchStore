<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.DetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

<androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:visibility="invisible"
             android:background="@drawable/rounded_pink_light_shape"
            />
    <ImageView
            android:id="@+id/fav"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/fav"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_pink_light_shape"
    />

    <ImageView
            android:id="@+id/watchImage"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_250sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            android:src="@drawable/offer"
            android:layout_marginTop="@dimen/_10sdp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/watchImage"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/rounded_pink_light_shape_no_bottom_redius"
            >
        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/checkout_exclusive_watches_from_top_brand"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/montserrat_bold"

        />
        <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/title"
                android:paddingTop="@dimen/_10sdp"
        >
            <TextView
                    android:id="@+id/discountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$90"
                    android:textColor="@color/secondary_dark"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10sdp"
            />
            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"
                    android:layout_centerInParent="true"/>
            <TextView
                    android:id="@+id/mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"

            />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/title"
                android:paddingTop="@dimen/_5sdp"

                android:paddingBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_dark_pink_shape"
        >
            <TextView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10sdp"
            />
            <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textStyle="bold"

            />
            <TextView
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textStyle="bold"

            />
        </LinearLayout>
        <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum has been the industry's standard dummy text."
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@+id/ll3"

        />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_dark_pink_shape"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/desc"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp">

            <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/outline_shopping_cart_24"
                    app:tint="@color/white"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                   />

        <TextView
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_cart"
                android:textColor="@color/white"
                 android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/montserrat_medium"
                android:textStyle="bold"
                android:padding="@dimen/_10sdp"


                />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>