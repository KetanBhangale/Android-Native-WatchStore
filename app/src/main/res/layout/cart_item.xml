<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_8sdp"
        app:cardMaxElevation="@dimen/_8sdp"
        app:cardUseCompatPadding="true">




    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingLeft="@dimen/_5sdp"

    >
        <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/round_highlight_off_black_48"
                android:scaleType="centerCrop"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/delete"
        >
            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Golden Watch with Great Discount Watch with Great Discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_65sdp"
                    android:ellipsize="none"
                    android:maxLines="2"
            />
            <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty: 3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingBottom="@dimen/_5sdp"
                    android:ellipsize="none"

            />
            <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

            >
                <TextView
                        android:id="@+id/discountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$90"
                        android:textColor="@color/secondary_dark"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_10sdp"
                />
                <RelativeLayout
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content">
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#c0c0c0"
                            android:layout_centerInParent="true"/>
                    <TextView
                            android:id="@+id/mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$120"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                    />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <ImageView
                android:id="@+id/productImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/offer"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/delete"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>